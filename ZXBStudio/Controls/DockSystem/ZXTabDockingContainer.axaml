<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:zxd="using:ZXBasicStudio.Controls.DockSystem"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ZXBasicStudio.Controls.DockSystem.ZXTabDockingContainer">
  <Grid Name="mainGrid" RowDefinitions="Auto,*,Auto" Background="Transparent">
    <StackPanel Orientation="Horizontal" Name="tabButtons" />
    <zxd:ZXTabDockingInnerContainer Grid.Row="1" Name="tabContent" />
    <Panel Grid.Row="1" Name="dropTargetPanel" IsVisible="False" />
  </Grid>
</UserControl>
