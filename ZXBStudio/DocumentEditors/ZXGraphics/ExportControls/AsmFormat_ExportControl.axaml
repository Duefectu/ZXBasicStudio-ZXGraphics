<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ZXBasicStudio.DocumentEditors.ZXGraphics.ExportControls.AsmFormat_ExportControl">
  <Grid RowDefinitions="Auto,*,Auto">
    <TextBlock FontSize="18" FontWeight="Bold">ASM format - Export options</TextBlock>

    <Border BorderBrush="Gray" BorderThickness="0,0,0,1" Padding="0,0,0,4" Grid.Row="1">
      <ScrollViewer>
        <StackPanel Orientation="Vertical" Spacing="4">
          <TextBlock Grid.Row="2" TextWrapping="Wrap">
            The data is exported in assembler inline format, within the ASM...END ASM directives.
          </TextBlock>

          <TextBlock FontSize="14" Foreground="Red" Margin="0,16,0,0">
            Export options
          </TextBlock>
          <CheckBox Classes="dialog" Name="chkAuto">Auto-export on every compilation (exit with save button)</CheckBox>
          <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto,Auto">
            <TextBlock Classes="dialog" VerticalAlignment="Center" HorizontalAlignment="Right">Export file path:</TextBlock>
            <TextBox Classes="dialog" Grid.Column="1" MaxWidth="Infinity" Name="txtOutputFile"></TextBox>
            <Button Classes="dialog" Grid.Column="2" VerticalAlignment="Center" Name="btnOutputFile">...</Button>

            <TextBlock Classes="dialog" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right">Label name:</TextBlock>
            <TextBox Classes="dialog" Grid.Row="1" Grid.Column="1" Name="txtLabelName" MaxLength="64" Width="100" HorizontalAlignment="Left"></TextBox>
          </Grid>

          <TextBlock FontSize="14" Foreground="Red" Margin="0,16,0,0">
            Example of use
          </TextBlock>
          <TextBox Name="txtCode" AcceptsReturn="true" AcceptsTab="True" IsReadOnly="True" />
          <Button Name="btnCopy" Classes="dialog" HorizontalAlignment="Right" Width="150">Copy sample to clipboard</Button>
        </StackPanel>
      </ScrollViewer>
    </Border>

    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="2" Margin="8">
      <Button Name="btnCancel" Classes="dialog">Close</Button>
      <Button Name="btnExport" Classes="dialog">Export now</Button>
      <Button Name="btnSave" Classes="dialog">Save options</Button>
    </StackPanel>
  </Grid>
</UserControl>
