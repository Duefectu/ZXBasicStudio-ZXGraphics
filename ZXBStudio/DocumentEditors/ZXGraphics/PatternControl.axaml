<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="36" d:DesignHeight="52"
             x:Class="ZXBasicStudio.DocumentEditors.ZXGraphics.PatternControl"
             Width="36" Height="52" Margin="1">
  <Border Name="brdMain" BorderBrush="Transparent" BorderThickness="1" BorderDashArray="5,0">
    <Grid RowDefinitions="16,34">
      <Grid ColumnDefinitions="*,Auto" Background="Black">
        <TextBlock Name="lblNumber" Foreground="Cyan"/>
        <TextBlock Name="lblName" Grid.Column="1" Foreground="White"/>
      </Grid>
      <Border BorderBrush="White" BorderThickness="1" Grid.Row="1" Width="34" Height="34">
        <Canvas Name="cnvPoints" Width="32" Height="32" Background="#c0c0c0"></Canvas>
      </Border>
    </Grid>
  </Border>
</UserControl>
